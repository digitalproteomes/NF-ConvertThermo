manifest {
    description = 'Convert Thermo RAW MS files to mzXML'
    author = 'Patrick Pedrioli'
}

params {
    raw_folder = 'Data/RAW'
    conv_params = ''
}

process.container = 'ppatrick/readw:latest'
docker {
    enabled = true
    sudo = true
    # user must match owner or /home/user in docker container
    runOptions = '-u 1001:$(id -g)'
}
